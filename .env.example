# Network
MONITOR_HOST=127.0.0.1 
MONITOR_PORT=7410
# Leave these blank if deploying on a service like Render

# Storage
MONITOR_DB_PATH=./monitor.sqlite

# Optional machine API key for telemetry ingest and compatibility access
MONITOR_API_KEY=replace-with-strong-random-secret

# Better Auth (web UI login)
MONITOR_AUTH_ENABLED=true
MONITOR_AUTH_SECRET=replace-with-strong-random-secret
MONITOR_AUTH_BASE_URL=
MONITOR_AUTH_TRUSTED_ORIGINS=
MONITOR_AUTH_ADMIN_EMAIL=admin@example.com
MONITOR_AUTH_ADMIN_PASSWORD=change-me-please

# Resend email alerts (optional)
# If not set, email alerts and test-email endpoint report "not configured"
MONITOR_RESEND_API_KEY=
MONITOR_RESEND_FROM_EMAIL=
MONITOR_RESEND_API_BASE=https://api.resend.com

# Maintenance
MONITOR_RETENTION_DAYS=30
MONITOR_EVALUATOR_INTERVAL_SECONDS=15
MONITOR_RETENTION_INTERVAL_SECONDS=3600
